<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <Button
            android:id="@+id/new_message_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/new_message_button" />

        <View
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1" >
        </View>

        <Button
            android:id="@+id/view_draft_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/view_draft_button" />
        <View
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1" >
        </View>

        <Button
            android:id="@+id/view_queue_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/view_queue_button" />
    </LinearLayout>
</LinearLayout>
